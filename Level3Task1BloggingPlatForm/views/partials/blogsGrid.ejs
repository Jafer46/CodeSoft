<div class="blog-grid-container">
  <% if (blogs && blogs.length > 0) { blogs.forEach(blog => {%>
  <div class="blog-grid">
    <a href="/blog/<%=blog._id%>">
      <div class="blog-card">
        <img src="<%=blog.imageUrl%>" alt="blog" class="blog-image" />
        <p class="blog-title"><%= blog.title%></p>
        <p class="blog-text"><%= blog.description %></p>
        <div class="blog-icon-wrapper">
          <img src="<%=blog.bloggerAvatar%>" alt="" class="blog-icon" />
          <p class="blog-text">By <%=blog.bloggerName%></p>
        </div>
      </div>
    </a>
  </div>
  <%}); } else { %>
  <div>no blog found</div>
  <% } %>
</div>
